@model Web.Models.SigninInput
@{
   // ViewData["Title"] = "SignIn";
}
<div class="container-fluid">
    <div class="row no-gutter">
        <!-- The image half -->
        <div class="col-md-6 d-none d-md-flex bg-image">
            <img src="https://i.pinimg.com/564x/8d/83/e6/8d83e6f41dfd39c5400768042d18f949.jpg" />
        </div>


        <!-- The content half -->
        <div class="col-md-6 bg-light">
            <div class="login d-flex align-items-center py-5">

                <!-- Demo content-->
                <div class="container">
                    <div class="row">
                        <div class="col-lg-10 col-xl-7 mx-auto">
                            <h3 class="display-4">Split page!</h3>
                            <p class="text-muted mb-4">Login Page</p>
                            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                            <form asp-controller="Auth" asp-action="SignIn" method="post">
                                <div class="form-group mb-3">
                                    <input id="inputEmail" type="email" placeholder="Email address" asp-for="Email" class="form-control rounded-pill border-0 shadow-sm px-4">
                                    <span class="text-danger" asp-validation-for="Email"></span>
                                </div>
                                <div class="form-group mb-3">
                                    <input id="inputPassword" type="password" placeholder="Password" asp-for="Password" class="form-control rounded-pill border-0 shadow-sm px-4 text-primary">
                                    <span class="text-danger" asp-validation-for="Email"></span>
                                </div>
                                <div class="custom-control custom-checkbox mb-3">
                                    <input id="customCheck1" type="checkbox" asp-for="RememberMe" checked class="custom-control-input">
                                    <label for="customCheck1"  asp-for="RememberMe" class="custom-control-label">Remember password</label>
                                </div>
                                <button type="submit" class="btn btn-primary btn-block text-uppercase mb-2 rounded-pill shadow-sm">Sign in</button>

                            </form>
                        </div>
                    </div>
                </div><!-- End -->

            </div>
        </div><!-- End -->

    </div>
</div>